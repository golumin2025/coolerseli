---
import BaseHead from "@components/sections/BaseHead.astro";
import Footer from "@components/sections/Footer.astro";
import Header from "@components/sections/Header.astro";
import { getEntry } from "astro:content";
interface Props {
    title: string;
    description: string;
}
const generalSettings = await getEntry("singletons", "general");
const { primaryColor, secondaryColor, backgroundColor } = generalSettings.data;

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={title} description={description} />

        <style
            define:vars={{
                primaryColor,
                secondaryColor,
                backgroundColor,
            }}
        >
            :root {
                --primary-color: var(--primaryColor);
                --secondary-color: var(--secondaryColor);
                --background-color: var(--backgroundColor);
            }
        </style>
    </head>
    <body class="overflow-x-hidden">
        <Header />
        <slot />
        <Footer />
    </body>
</html>
