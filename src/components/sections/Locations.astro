---
import Button from "../ui/Button.astro";
const { title, locations, button, sectionTitle, colTwoTitle } = Astro.props;
---

<section class="py-8 md:py-12 custom-container lg:py-16">
    <h1
        class="text-3xl sm:text-4xl lg:text-5xl fade-up font-normal text-center text-primary custom-container mb-6 md:mb-8 lg:mb-10"
    >
        {sectionTitle}
    </h1>

    <div
        class="mx-auto flex flex-col lg:flex-row gap-6 md:gap-8 lg:gap-12 justify-between place-items-center items-stretch rounded-lg md:rounded-xl lg:rounded-2xl overflow-hidden px-0 bg-black section-wrapper"
    >
        <div
            class="w-full lg:w-3/5 flex fade-up justify-center flex-col py-6 md:py-8 lg:py-10 px-4 md:px-6"
        >
            <h3
                class="text-white font-normal text-center text-lg sm:text-xl pb-3 md:pb-4"
            >
                {title}
            </h3>
            <ul
                class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-4 md:gap-x-5 lg:gap-x-6 gap-y-1 w-full max-w-2xl px-4 md:px-6"
            >
                {
                    locations.map((item: any) => (
                        <a
                            href={item.link}
                            class="fade-up underline text-sm sm:text-base font-normal text-white hover:text-gray-200 transition-colors"
                        >
                            {item.title}
                        </a>
                    ))
                }
            </ul>
        </div>
        <div
            class="w-full lg:w-2/5 py-6 lg:py-16 rounded-t-2xl md:rounded-l-xl lg:rounded-l-2xl"
        >
            <div
                class="flex h-full flex-col justify-center items-center gap-6 md:gap-8 lg:gap-10"
            >
                <h2
                    class="lg:text-primary text-white text-2xl sm:text-3xl lg:text-4xl text-center font-normal px-4"
                    set:html={colTwoTitle}
                />
                <Button set:text={button.title} set:html={button.link} />
            </div>
        </div>
    </div>
</section>

<style>
    @media (min-width: 1024px) {
        .section-wrapper {
            background-image: linear-gradient(
                117deg,
                rgba(var(--primary-color), 1) 58%,
                rgba(234, 237, 241, 1) 58%
            );
        }
    }
</style>
